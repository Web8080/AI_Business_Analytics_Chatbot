# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
API_DEBUG=True

# Database Configuration
DATABASE_URL=sqlite:///./analytics.db

# Email Configuration (for report distribution)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com

# Analytics Configuration
CONFIDENCE_THRESHOLD=0.7
MAX_FORECAST_PERIODS=12
OUTLIER_DETECTION_THRESHOLD=3.0

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,csv,xlsx

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/analytics.log

# Report Generation
REPORT_OUTPUT_DIR=reports/generated
REPORT_COMPANY_NAME=Your Company Name

